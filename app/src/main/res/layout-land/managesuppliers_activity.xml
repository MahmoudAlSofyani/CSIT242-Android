<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suppliers"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/mainTextColor"
        android:textAlignment="center"
        />

    <ListView
        android:id="@+id/managesuppliersActivity_supplierList_ListView"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:divider="#A80000"
        android:dividerHeight="1.5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:onClick="goToAddNewSupplier"
            android:text="@string/addNewSupplier"/>
    </LinearLayout>

    <include layout="@layout/bottom_navigation_layout" />



</LinearLayout>